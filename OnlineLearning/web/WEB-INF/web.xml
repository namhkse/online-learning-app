<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/profile</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>ManagementFilter</filter-name>
        <filter-class>filter.ManagementFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ManagementFilter</filter-name>
        <url-pattern>/management/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CourseFilter</filter-name>
        <filter-class>filter.CourseFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CourseFilter</filter-name>
        <url-pattern>/management/course</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>DashboardFilter</filter-name>
        <filter-class>filter.DashboardFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DashboardFilter</filter-name>
        <url-pattern>/management/dashboard</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SliderFilter</filter-name>
        <filter-class>filter.SliderFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SliderFilter</filter-name>
        <url-pattern>/management/slide</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>PostFilter</filter-name>
        <filter-class>filter.PostFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PostFilter</filter-name>
        <url-pattern>/management/post</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AccountFilter</filter-name>
        <filter-class>filter.AccountFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccountFilter</filter-name>
        <url-pattern>/management/account</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
